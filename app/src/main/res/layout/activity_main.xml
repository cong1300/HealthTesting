<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xinnuo.apple.healthtesting.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:text="健 康 测 试 项 目 选 择"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/textView"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <Button
                android:text="身高体重"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/height_and_weight"
                android:background="@drawable/textview_fourborder"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <Space
                android:layout_height="wrap_content"
                android:layout_width="5dp" />

            <Button
                android:text="肺活量"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/vital_capacity"
                android:background="@drawable/textview_fourborder"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />
            <Space
                android:layout_height="wrap_content"
                android:layout_width="5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/long_jump"
                android:layout_weight="1"
                android:background="@drawable/textview_fourborder"
                android:textColor="@android:color/background_light"
                android:text="立定跳远(cm)" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <Button
                android:text="坐位体前屈(cm)"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/reach"
                android:background="@drawable/textview_fourborder"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />
            <Space
                android:layout_height="wrap_content"
                android:layout_width="5dp" />

            <Button
                android:text="仰卧起坐"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/abdominal_curl"
                android:background="@drawable/textview_fourborder"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <Space
                android:layout_height="wrap_content"
                android:layout_width="5dp" />

            <Button
                android:text="引体向上"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pull_ups"
                android:background="@drawable/textview_fourborder"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <Button
                android:text="800米"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/eight_hundred_meters"
                android:background="@drawable/textview_fourborder"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />
            <Space
                android:layout_height="wrap_content"
                android:layout_width="5dp" />

            <Button
                android:text="1000米"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/one_thousand_meters"
                android:background="@drawable/textview_fourborder"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />

            <Space
                android:layout_height="wrap_content"
                android:layout_width="5dp" />

            <Button
                android:text="50米(秒)"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/fifty_meters"
                android:background="@drawable/textview_fourborder"
                android:textColor="@android:color/background_light"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
